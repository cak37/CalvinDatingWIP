<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/navigation_header_image" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="@color/calvinMaroon"
            android:elevation="1dp"
            android:paddingBottom="24dp">


            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="76dp"
                android:text=""
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_profile_short_bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_profile_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Fun, lovable guy that never takes his helmet off. So I don't need to worry about helmet hair."
                android:textColor="#fff"
                android:textSize="14sp"
                android:textAlignment="center" />

            <Button
                android:text="Edit Profile"
                android:layout_width="100dp"
                android:layout_height="33dp"
                android:id="@+id/editProfile"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="16dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="@android:color/white"
                android:background="@drawable/my_button_bg"
                android:textAlignment="center" />

            <Button
                android:text="Choose Photo"
                android:layout_height="33dp"
                android:textColor="@android:color/white"
                android:background="@drawable/my_button_bg"
                android:id="@+id/choosePhoto"
                android:elevation="0dp"
                android:textSize="12sp"
                android:layout_width="100dp"
                android:layout_alignBaseline="@+id/editProfile"
                android:layout_alignBottom="@+id/editProfile"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="Looking for: Female Princess"
                android:id="@+id/looking_for" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="Activities: Scaring villigars and fighting dragons"
                android:id="@+id/activities" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="Fun Facts: I am often compared to onions and cakes"
                android:id="@+id/fun_facts" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="Favorite Hangout: Swamp"
                android:id="@+id/hangout_spot" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="Major: Film Studies \nMinor: International Relations"
                android:id="@+id/major_minor" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_height="150dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:elevation="8dp"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/joust"
            android:layout_width="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="95dp" />
    </RelativeLayout>
</ScrollView>